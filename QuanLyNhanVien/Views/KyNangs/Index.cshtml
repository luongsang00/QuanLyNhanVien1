@*@model IEnumerable<QuanLyNhanVien.Models.KyNang>*@
@model X.PagedList.IPagedList<QuanLyNhanVien.Models.KyNang>
@using X.PagedList
@using X.PagedList.Mvc.Core
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên:
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoaiKn)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdKyNang">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdKyNang">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdKyNang">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
@*Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount*@
@Html.PagedListPager(Model, page => Url.Action("Index","KyNangs",new{page=page}))
</div>
